{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "module": "CommonJS",
    "isolatedModules": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "types": ["node", "jest"],
    "paths": {
      "#/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "reset.d.ts"]
}
