{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "module": "CommonJS",
    "isolatedModules": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "types": ["node", "jest"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*", "reset.d.ts"]
}
